<p style="color: blue"><%= notice %></p>

 <input type="text" class="search-bar" placeholder="Search for grandparents...">

<h1>Grandparents near you</h1>

<div class="d-flex" >

  <div class="container" id="grandparents" >
    <div class="row">
      <% @grandparents.each do |grandparent| %>
        <%= render "shared/grandparent_card", grandparent: grandparent %>
      <% end %>
    </div>
  </div>
</div>

<p><%= link_to "Add a grandparent", grandparents_new_path %></p>
<p><%= link_to "Go back to the home page", root_path %></p>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>

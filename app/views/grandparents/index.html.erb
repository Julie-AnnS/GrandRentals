<%= form_with url: grandparents_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a grandparent"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<h1>Grandparents near you</h1>

<div class="d-flex" >

  <div class="container" id="grandparents" >
    <div class="row">
      <% @grandparents.each do |grandparent| %>
        <%= render "shared/grandparent_card", grandparent: grandparent %>
      <% end %>
    </div>
  </div>
</div>

<p><%= button_to 'Add a grandparent', grandparents_new_path, method: :get %></p>
<p><%= button_to 'Go back to the home page', root_path, method: :get %></p>



<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
